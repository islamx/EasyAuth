# MongoDB
MONGO_URI=mongodb://localhost:27017/easyauth

# JWT
# IMPORTANT: In production, generate a secure secret with at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# The API will refuse to start in production with an insecure secret
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=15m

# Server
PORT=4000
NODE_ENV=development

# CORS - frontend URL(s). For production with Vercel use your app URL; multiple origins comma-separated.
# Example: CORS_ORIGIN=https://your-app.vercel.app
# Example (dev + prod): CORS_ORIGIN=http://localhost:3000,https://your-app.vercel.app
CORS_ORIGIN=http://localhost:3000
